commit_msg="SUPERSECRETCOMMITü§êthatnormalPeOpLeü´Çwon't_ACHCTHUALLLYUSSE"
id=$(git rev-parse :/commit_msg)

if [ "$1" = "add" ]; then
	
	if [[ $id == "fatal: "* ]]; then
		git add *
		git commit -a -m "$commit_msg"
		git push
	else
		echo FOUND A MOVR COMMIT MESSAGE!
		echo YOU MUST CLEAN THE SLATE FIRST!
		exit 1
	fi

elif [ "$1" = "reset" ]; then


	if [[ $id == fatal: ]]; then
		echo COULD NOT FIND A MOVR COMMIT MESSAGE, NOTHING TO RESET
		exit 0
	else
		git reset --hard $id
	fi
fi

